rpm -aq | grep - jdk #finds the java version
to uninstall java rpm -e jdk<version>
# after copying the jdk file to /usr/java run this command to install the jdk version provided below
rpm -ivh jadk<version>.rpm
# for uploading the files to the server we use curl command 
curl -k -u <username>:<passd> =F cmd=install/upload/uninstall/delete http::/<host>:<port>/crx/packmgr/service/.json/etc/packages/<path>
# for taking heap dump 
sud0 -adobeuser jmap -dump:format=b, file=heapdumpfile.hprof <pid>
